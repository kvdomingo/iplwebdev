{% extends "offhome_layout.html.j2" %}
{% set active_page = 'principals' %}

{% block title %}
    Principal Investigators
{% endblock %}

{% block heading %}
    Principal Investigators
{% endblock %}

{% block content %}

<div class="row">
    <div class="col">
        <h3 class="text-secondary">
            {{ lipsum(1) }}
        </h3>
        <p>
            {{ lipsum(2) }}
        </p><br />
        {% set nabbrev = ["csaloma", "msoriano", "mlim", "gtapang", "jbantang"] %}
        {% for name, surname in summary %}
            <div class="row">
                <div class="col-3">
                    <a href="{{ url_for('principal_bio', principal=nabbrev[loop.index0]) }}"><img class="img-fluid" src="images/{{ surname }}.jpg" style="height: 100%" /></a>
                </div>
                <div class="col">
                    <h4><a href="{{ url_for('principal_bio', principal=nabbrev[loop.index0]) }}">{{ name }}</a></h4>
                    {% if surname == "Saloma" %}
                        <p class="text-secondary">
                            Laboratory Coordinator<br />
                            Team One
                        </p>
                    {% elif surname == "Soriano" %}
                        <p class="text-secondary">
                            Video and Image Processing
                        </p>
                    {% elif surname == "Lim" %}
                        <p class="text-secondary">
                            Complex Systems Team
                        </p>
                    {% elif surname == "Tapang" %}
                        <p class="text-secondary">
                            Synchronization and BioOptics
                        </p>
                    {% else %}
                        <p class="text-secondary">
                            Complexity Science Group
                        </p>
                    {% endif %}
                    {% include "content/principals/0" + loop.index|string + "-pi.html" %}
                </div>
            </div>
            {% if loop.index < 5 %}
                <hr />
            {% endif %}
        {% endfor %}
    </div>
    <div class="col-3">
        {% include "about_sidebar.html.j2" %}
    </div>
</div>

{% endblock %}
